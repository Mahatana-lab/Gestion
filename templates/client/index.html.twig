{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
        
  
            <main class='main-content bgc-grey-100'>
                <div id='mainContent'>
                    <div class="row">
                        <div class="col-md-5">
                            <div class=" bgc-white p-20 bd">
                                <h6 class="c-grey-900">Liste des Clients</h6>
                                <div class="mT-30">
                                    <form>
                                        <div class="form-group">
                                            <label for="login">Nom</label>
                                            <input type="text" onblur="CheckInput(1)" required class="form-control" id="NomClient" name="NomClient" placeholder="Mahatana">
                                            <small id="loginErreur" style="color:red!important;" class="form-text text-muted"></small>
                                        </div>
                                        <div class="form-group">
                                            <label for="emailuser">Email</label>
                                            <input type="email" onblur="CheckInput(2)"  required  class="form-control" id="emailuser" name="emailuser" placeholder="Ma@gmail.com"/>
                                            <small id="emailuserErreur" style="color:red!important;" class="form-text text-muted"></small>
                                        </div>
                                        <div class="form-group">
                                            <label for="mdpuser">Password</label>
                                            <input type="text" required  class="form-control" id="mdpuser" name="mdpuser"   placeholder="Au moins 8 caractères">
                                        </div>
                                        <div class="form-group">
                                            <label for="tel">Téléphone</label>
                                            <input type="text" required  class="form-control" id="tel" name="teluser" placeholder="ex: +2613111000">
                                        </div>
                                        <div class="form-group">
                                            {#<label for="prenomuser">Pr&eacute;nom</label>#}
                                            <label for="lieu">Lieu</label>
                                            <input type="text" required  class="form-control" id="lieu" name="lieuuser" placeholder="ex: Ambatomainty IIA">
                                        </div>
                                        <div class="form-group">
                                            {#<label for="prenomuser">Pr&eacute;nom</label>#}
                                            <label for="Datecom">Date de commande</label>
                                            <input type="date" required  class="form-control" id="datecom" name="datecom">
                                        </div>
                                        <div class="form-group">
                                            {#<label for="prenomuser">Pr&eacute;nom</label>#}
                                            <label for="Dateliv">Date de livraison</label>
                                            <input type="date" required  class="form-control" id="dateliv" name="dateliv">
                                        </div>
                                        <div class="form-group">
                                            <label for="bio">Détail commande</label>
                                            <textarea class="form-control" id="bio" rows="3"></textarea>
                                        </div>
                                       
                                       
                                        <button id="btnUser" type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="bgc-white p-20 bd">
                                <div class="container-fluid">
                                    <h4 class="c-grey-900 mT-10 mB-30">Liste des Clients</h4>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                                            <table id="dataTabless" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                                <thead>
                                                    <tr>
                                                        {#<th>#</th>#}   
                                                        <th>id</th>
                                                        <th>Nom</th>
                                                        {#<th>Prenom</th>#}
                                                        {#<th>Login</th>#}
                                                        <th>Email</th>
                                                        <th>Password</th>
                                                        {#<th>Token</th>#}
                                                        <th>Téléphone</th>
                                                        <th>Lieu</th>
                                                        <th>Date de commande</th>
                                                        <th>Date de livraison</th>
                                                        <th>Détail de commande</th>
                                                    </tr>
                                                </thead>
                                                {#<tfoot>                                    
                                                    <tr>
                                                        <th>#</th>
                                                        <th>id</th>
                                                        <th>Nom</th>
                                                        <th>Prenom</th>
                                                        <th>Login</th>
                                                        <th>Mail</th>
                                                        <th>Mot de passe</th>
                                                        <th>Téléphone</th>
                                                        <th>Token</th>
                                                    </tr>
                                                </tfoot>#}
                                                <tbody>
                                                    {% set iUser = 0 %}
                                                    {# {% for plat in allPlat %} #}
                                                    
                                                    <tr {#id="lignePlat{{plat.id}}" #}>
                                                        <td>
                                                            {% set iUser = iUser + 1 %}
                                                            <b>{{iUser}}</b>
                                                        </td>
                                                        <td>{# {{plat.nom}} #}</td>
                                                        <td>{# {{plat.prix}}#}</td>
                                                        <td>{#  {{plat.prix}}#}</td>
                                                        <td>{# {{plat.prix}}#}</td>
                                                        <td>{# {{plat.images}}#}</td>
                                                        <td>                                      
                                                            {# <a title="Modifier" href="{{ path('api_show_one_plat', {'id': plat.id})}}" class=""><Label style="cursor:pointer;" Class="ti-pencil" Format="i" /></a>
                                                            &nbsp;&nbsp;
                                                            <Label onclick="deletePlat({{plat.id}})" style="color:red;cursor:pointer;" Class="fa fa-remove" Format="i" /> #}
                                                        </td>
                                                    </tr>
                                                    {# {% endfor %} #}
                                                </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </main>
   
{% endblock %}
