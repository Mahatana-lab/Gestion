{% extends 'base.html.twig' %}

{% block title %}Fournisseur{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form>
  <fieldset>
    <legend>Ajout nouveau Fournisseur</legend>
    {#<div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="email@example.com">
            </div>
    </div>#}
    <div class="form-group">
      <label for="email">Adresse email du founisseur</label>
      <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Entrez l'adresse email du fournisseur">
    </div>
    <div class="form-group">
      <label for="Nomsoc">Nom de la société</label>
      <input type="Text" class="form-control" id="Nomsoc" placeholder="Nom du fournisseur">
    </div>
    <div class="form-group">
      <label for="achat">Minimum de commande </label>
      <input type="Text" class="form-control" id="achat"  placeholder="ex : 15 000Ar">
    </div>
    <div class="form-group">
      <label for="JourO">Jour d'ouverture</label>
      <input type="Text" class="form-control" id="JourO" placeholder="Lundi, Mardi, Mercredi, Jeudi, Vendredi ou Autre">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="HeureO">Heure d'ouverture</label>
            <input type="Text" class="form-control" id="HeureO"  placeholder="ex : 8h">
        </div>
        <div class="form-group col-md-6">
            <label for="HeureF">Heure de fermeture</label>
            <input type="Text" class="form-control" id="HeureF"  placeholder="ex : 8h">
        </div>  
         
    </div>

    
    <div class="form-group">
      <label for="Detail">Détail du founisseur</label>
      <textarea class="form-control" id="Detail" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="logoFournisseur">Logo</label>
      <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
    </div>
   
    <button type="button" class="btn btn-success">Enregistrer</button>
  </fieldset>
</form>

    
</div>
{% endblock %}
